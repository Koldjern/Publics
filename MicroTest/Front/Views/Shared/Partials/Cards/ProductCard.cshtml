@model Product
<div class="card card-outline-primary m-1 p-1">
	<div class="bg-faded p-1">
		<h4>
			@Model?.Name
			<span class="badge rounded-pill bg-primary text-white"
				  style="float:right">
				<small>@Model?.Price.ToString("c")</small>
			</span>
		</h4>
	</div>
	<form id="@Model?.ProductID" asp-route-ProductId="@Model?.ProductID" asp-route-returnURl="@ViewContext.HttpContext.Request.PathAndQuery()" asp-page="/Carts/Cart" method="post">
		<span class="card-text p-1">
			@Model?.Description
			<button type="submit"
					class="btn btn-success btn-sm pull-right" style="float:right">
				Add To Cart
			</button>
		</span>
	</form>
</div>